@model CASwebsite.Models.CursusInstantie

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Cursusplanning uploaden</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control"  type="file" runat="server"/>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Verwerken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar cursuslijst</a>
</div>

