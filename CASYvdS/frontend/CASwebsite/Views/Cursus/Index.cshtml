@model IEnumerable<CASwebsite.Models.CursusInstantie>

@{
    ViewData["Title"] = "Cursusoverzicht";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Cursusoverzicht</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            Startdatum
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cursus.Duur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cursus.Naam)
        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDatum.Day)/@Html.DisplayFor(modelItem => item.StartDatum.Month)/@Html.DisplayFor(modelItem => item.StartDatum.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cursus.Duur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cursus.Naam)
            </td>
            <td>
                @Html.ActionLink("Bekijken", "Details", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
